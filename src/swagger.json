{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Essa é uma documentação sobre a Atlas API.",
    "version": "1.0.0",
    "contact": {
      "email": "danielmarcosh@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "description": "Campos obrigatórios para criação de um novo usuário.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Junior",
                  "email": "junior@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "83e60fff-2b53-4130-b3c6-d305428acd3e",
                    "name": "Junior",
                    "email": "junior@email.com",
                    "created_at": "2022-03-05T03:42:04.240Z",
                    "updated_at": "2022-03-05T03:42:04.240Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "E-mail já está sendo utilizado",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "error": "This email is already in use."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retorna todos os usuários.",
        "description": "Somente usuários ```admin``` pode acessar.",
        "parameters": {
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "Numeric ID of the user to get"
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retorna um usuário específico",
        "description": "Retorna um usuário específico",
        "parameters": {
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "Numeric ID of the user to get"
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Torna admin um usuário.",
        "description": "Torna admin um usuário.",
        "parameters": {
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "Numeric ID of the user to get"
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Error"
          }
        }
      }
    }
  }
}
